<div class="webpage-name"> Urls </div>

<div class="container admin table-responsive">
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th> id </th>
				<th class= "column-link"> link </th>
				<th> random_string </th>
				<th> clicks </th>
				<th> delete </th>
			</tr>
		</thead>
		<tbody>
			<% @urls.each do |url| %>
				<tr>
					<td><%= url.id %></td>
					<td><%= url.link %></td>
					<td><%= url.random_string %></td>
					<td><%= url.clicks %></td>
					<td><%= form_tag(url_path(url.id), method: "delete") do %>
						<%= button_to "delete" %>
						<% end %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>


